@model LoanOrder

<div class="container my-5">

    <h1>Lend a Book</h1>
    <div class="row p-4 pb-0 pe-lg-0 pt-lg-5 align-items-center rounded-3 border shadow-lg">


        <form asp-action="AddLoanOrder" autocomplete="off">
            <input type="hidden" asp-for="LoanOrderId" />

            <div class="form-group">
                <label>Choose a Book</label>
                <select asp-for="BookId">
                    @await Component.InvokeAsync("Books")
                </select>
            </div>

            <div class="form-group">
                <label>Choose a Customer</label>
                <select asp-for="CustomerId">
                    @await Component.InvokeAsync("Customers")
                </select>
            </div>

            <div class="row mt-2">
                <div class="col-md-6">
                    <div class="form-group">
                        <input type="submit" value="Submit" class="btn btn-primary w-100" />
                    </div>
                </div>

                <div class="col-md-6">
                    <a asp-action="Index" class="btn btn-secondary w-100">Go back</a>
                </div>

            </div>
        </form>

    </div>
</div>
